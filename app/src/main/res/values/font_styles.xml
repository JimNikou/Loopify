<?xml version="1.0" encoding="utf-8"?>
<resources><!-- Custom TextAppearance for all BottomNavigation items -->
    <style name="BottomNavTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/pptelegraf_ultrabold</item> <!-- Use your custom font here -->
        <item name="android:textSize">12sp</item> <!-- Adjust the size as needed -->
        <item name="android:textColor">#000000</item> <!-- Set a default text color if needed -->
    </style>

    <style name="BottomNavTextAppearanceInactive" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/pptelegraf_regular</item> <!-- Use your custom font here -->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item> <!-- Customize the color for inactive items -->
    </style>


        <!-- TextAppearance for Toolbar Titles -->
        <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
            <item name="android:fontFamily">@font/pptelegraf_ultrabold</item>
            <item name="android:textSize">23sp</item>  <!-- Adjust the size as needed -->
            <item name="android:textColor">#000000</item>  <!-- Set default text color -->
        </style>

    <!-- Custom TextAppearance for Navigation Drawer items -->
    <style name="NavigationDrawerTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/pptelegraf_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Customize the text color if needed -->
    </style>


</resources>