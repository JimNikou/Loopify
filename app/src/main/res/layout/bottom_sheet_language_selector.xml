<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:paddingVertical="16dp"
    android:paddingHorizontal="24dp"
    android:elevation="8dp"
    android:clipToPadding="false">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="@string/select_language"
        android:textAppearance="@style/ultrabold_font_20"
        android:textColor="@color/white" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/rounded_div"
        android:layout_marginBottom="12dp" />

    <!-- Language Options -->
    <LinearLayout
        android:id="@+id/language_option_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/english"
            android:textAppearance="@style/ultrabold_font_16"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/language_option_greek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/greek"
            android:textAppearance="@style/ultrabold_font_16"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/language_option_spanish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spanish"
            android:textAppearance="@style/ultrabold_font_16"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>